@model IEnumerable<BGBC.Model.vRentPayment>
@{
    ViewBag.Title = "ViewPropertyPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="back">
    <div class="col-md-12 no-padd">

        <div class="col-md-6 col-sm-6 no-padd">
            <h1>@ViewBag.Name  Payment Activity</h1>
        </div>
        <div class="col-md-6 col-sm-6 no-padd header-btn"> 
          @Html.ActionLink("Back", "ViewAllTenantPayments", "Tenant", new { id=ViewBag.PropertyID}, new { @class = "btn-button btn-primary pull-right" }) 
        </div>
    </div> 
    <div class="clearfix">&nbsp;</div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Date/Time
                    </th>
                    <th>
                        Confirmation #
                    </th> 
                    <th>
                        Description
                    </th>
                    <th>
                        Payment Amount
                    </th>
                    <th>
                        Comment
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(p => item.TransDate)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.TransID)
                        </td> 
                        <td>
                            @Html.DisplayFor(p => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.Comments)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

