@model IEnumerable<BGBC.Model.TenantReferral>

@{
    ViewBag.Title = "TenantReferal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="back">
    <div class="col-md-12 no-padd">
        <div class="col-md-9 col-sm-6 no-padd">
            <h1>Tenant Referral Form Submissions</h1>
        </div>
        <div class="col-md-3 col-sm-6 no-padd header-btn">
            @Html.ActionLink("Back to Dashboard", "Index", "Admin", null, new { @class = "btn-button btn-primary pull-right" })
        </div>
    </div> 
    <div class="clearfix">&nbsp;</div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Date Created
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            Contact Name
                        </th>
                        <th>
                            Contact Address
                        </th>
                        <th>
                            Contact Email
                        </th>
                        <th>
                            Contact Phone
                        </th>
                    </tr>
                </thead>
               
                    <tbody>
@foreach (var item in Model)
{
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Createdon)  
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordPhone)
                            </td>
                             
                        </tr>
                         }
                    </tbody>
            

            </table>
        </div>
    </div>
   