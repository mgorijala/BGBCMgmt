@model BGBC.Model.Property

@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .row {
        padding-top: 10px;
    }
</style>

<div class="back">
    <h1>Add a Property - Confirm</h1>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Name)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Nickname)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Nickname)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Address)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Address)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Address2)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Address2)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.City)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.City)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.State)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.State)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Zip)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Zip)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.RentDueDay)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.RentDueDay)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.GracePeriod)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.GracePeriod)<span>  days</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Penalty)
            </b>
        </div>
        <div class="col-md-9">
            @if (Model.Penalty.ToString() == "")
            {
                <span>N/A</span>
            }
            else
            {
            @Html.DisplayFor(model => model.Penalty)
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.DailyPenalty)
            </b>
        </div>
        <div class="col-md-9">
            @if (Model.DailyPenalty.ToString() == "")
            {
                <span>N/A</span>
            }
            else
            {
            @Html.DisplayFor(model => model.DailyPenalty)
            }
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="alert alert-info">
        <p class="alert-link">
            Please note that you will not be able to change the following fields once you've added this tenant.
            <br />
            You will need to contact BGBC Management to change these values.
        </p>
        <div style="padding-left:15px;padding-bottom:20px;">
            <li>Rent Due Monthly On</li>
            <li>Grace Period</li>
            <li>Late Penalty Charge</li>
            <li>Daily Late Penalty Charge</li>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Add", "Property"))
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Add Property" class="btn-button btn-primary" />

                    @Html.ActionLink("Edit", "Add", "Property", null, new { @class = "btn-button btn-primary" })
                    @Html.ActionLink("Cancel", "MyProperties", "Owner")
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}