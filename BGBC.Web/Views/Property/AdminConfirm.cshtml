            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Address2)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.City)
            </b>
        </div>
        <div class="col-md-9">
