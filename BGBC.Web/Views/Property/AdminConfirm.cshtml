        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.State)
            </b>
        </div>
        <div class="col-md-9">

            @Html.DisplayFor(model => model.State)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Zip)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Zip)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.RentDueDay)
            </b>
        </div>
        <div class="col-md-9">
            @if (Model.RentDueDay.ToString() == "1")
            {
                @Html.DisplayFor(model => model.RentDueDay)<span>st</span>
            }
            else if (Model.RentDueDay.ToString() == "2")
            {
                @Html.DisplayFor(model => model.RentDueDay)<span>nd</span>
            }
            else if (Model.RentDueDay.ToString() == "3")
            {
                @Html.DisplayFor(model => model.RentDueDay)<span>rd</span>
            }
            else
            {
                @Html.DisplayFor(model => model.RentDueDay)<span>th</span>
            }
            @*@Html.DisplayFor(model => model.RentDueDay)*@
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.GracePeriod)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.GracePeriod)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Penalty)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Penalty)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.DailyPenalty)
            </b>
        </div>
        <div class="col-md-9"> 
            
                @Html.DisplayFor(model => model.DailyPenalty)
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("AdminEdit", "Property"))
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Save Property" class="btn-button btn-primary" />
                    @Html.ActionLink("Edit", "AdminEdit", "Property", new { id = Model.PropertyID }, new { @class = "btn-button btn-primary" })
                    @Html.ActionLink("Cancel", null, null, null, new { href=Request.UrlReferrer})
                </div>
            }
        </div>
    </div>
</div>







































































































































