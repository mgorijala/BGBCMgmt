@model IEnumerable<BGBC.Web.Models.AllPropertiesAndTenant>
@{
    ViewBag.Title = "ViewAllTenantPayments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="back">
    @foreach (var prop in Model)
    {
        <div class=" col-md-12 no-padd">

            <div class="col-md-9 col-sm-6 no-padd">
                <h1>@Html.DisplayFor(p => prop.Pname)<br /> Recent Tenant Payments</h1>
                <br />
            </div>
            <div class="col-md-3 col-sm-6 no-padd header-btn">
                @Html.ActionLink("Back to Properties", "OwnerProperties", "Admin", new { id = @ViewBag.UserID }, new { @class = "btn-button btn-primary" })

            </div>
        </div>
    <div class="clearfix">&nbsp;</div>
        <div class="col-md-12 no-padd">
            <div class="col-md-9 col-sm-6 no-padd"></div>
            <div class="col-md-3 col-sm-6 no-padd header-btn">
                @Html.ActionLink("View Full Payment History", "ViewPropertyPayment", "Admin", new { id = @ViewBag.PropertyID }, new { @class = "btn-button btn-primary" })
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="text-align:left">
                                Date
                            </th>
                            <th style="text-align:left">
                                Confirmation#
                            </th>
                            <th style="text-align:left">
                                Name
                            </th>
                            <th style="text-align:left">
                                Description
                            </th>
                            <th style="text-align:left">
                                Amount
                            </th>
                            <th style="text-align:left">
                                Comment
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < prop.tenantRentPay.Count; i++)
                        {
                            int value = prop.tenantRentPay[i].RentPayment.Count;
                            for (int j = 0; j < value; j++)
                            {
                                <tr>
                                    <td class="text-left">
                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].TransDate)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].TransID)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].TenantFirstName)

                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].TenantLastName)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].Description)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].Amount)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(p => prop.tenantRentPay[i].RentPayment[j].Comments)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
    }
    </div>