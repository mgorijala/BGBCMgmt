@model BGBC.Web.Models.TenantInfo

@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .row {
        padding-top: 10px;
    }
</style>
<div class="back">
    <h1>Add a Tenant - Confirm</h1>
    @Html.HiddenFor(model => model.TenantID)
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.PropertyID)
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.OwnerName)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.OwnerName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayName("Property Address")
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Address)  <br />
            @Html.DisplayFor(model => model.Address2)<br/>
            @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.Zip)
           
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.FirstName)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.FirstName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.LastName)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Email)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    @if(Model.ProfileInfo.BillingAddressSame.ToString()=="True")
    {
        <div class="row">
            <div class="col-md-3">
                <b> @Html.DisplayName("Billing Address")</b>
            </div>
            <div class="col-md-9">
                <h6>Same as property address.</h6>
            </div>
        </div>
    }
    else
    { 
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.BillingAddress)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.BillingAddress)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.BillingAddress_2)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.BillingAddress_2)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.BillingCty)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.BillingCty)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.BillingState)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.BillingState)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.BillingZip)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.BillingZip)
        </div>
    </div>
    }
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.HomePhone)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.HomePhone)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.WorkPhone)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.WorkPhone)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.MobilePhone)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ProfileInfo.MobilePhone)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.RentAmount)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.RentAmount)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.FinalDueDate)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.FinalDueDate)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Deposit)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Deposit)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.DepostDueDate)
            </b>
        </div>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.DepostDueDate)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.PetDepositDue)
            </b>
        </div>
        <div class="col-md-9">
            @if (Model.PetDepositDue.ToString() == "True")
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </div>
    </div>
    @if (Model.PetDepositDue.ToString() == "True")
    {
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.PetDeposit)
                </b>
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.PetDeposit)
            </div>
        </div>
    }
    <br/>
    <div class="alert alert-info">
        <div class="alert-link">
            The tenant will be sent an email with instructions on how to complete their registration.
        </div>
        </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Add", "Tenant"))
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                        <input type="submit" value="Add Tenant" class="btn-button btn-primary" />
                    @Html.ActionLink("Edit", "Add", "Tenant", null, new { @class = "btn-button btn-primary" })
                    @Html.ActionLink("Cancel", "Add", "Tenant", new { id = Model.UserID }, new { @class = "" })
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}