@model BGBC.Web.Models.TenantInfo

@{
    ViewBag.Title = "ConfirmEditAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .row {
        padding-top: 10px;
    }
</style>

<div class="back">
@using (Html.BeginForm("EditAdmin", "Tenant"))
    {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PropertyID)
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.TenantID)
    @Html.HiddenFor(model => model.PropertyName)
    @Html.HiddenFor(model => model.OwnerName)
    @Html.HiddenFor(model => model.ProfileInfo.ProfileID)
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.OwnerName)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.OwnerName)
            @Html.DisplayFor(model => model.OwnerName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayName("Property Address")
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.Address)
            @Html.HiddenFor(model => model.Address2)
            @Html.HiddenFor(model => model.City)
            @Html.HiddenFor(model => model.State)
            @Html.HiddenFor(model => model.Zip)
            @Html.DisplayFor(model => model.Address)  <br />
            @Html.DisplayFor(model => model.Address2)<br />
            @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.Zip)

        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.FirstName)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.FirstName)
            @Html.DisplayFor(model => model.FirstName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.LastName)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.LastName)
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Email)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.Email)
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ConfirmEmail)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.ConfirmEmail)
            @Html.DisplayFor(model => model.ConfirmEmail)
        </div>
    </div>
    @Html.HiddenFor(model => model.ProfileInfo.BillingAddressSame)
    if (Model.ProfileInfo.BillingAddressSame.ToString() == "True")
    {
        <div class="row">
            <div class="col-md-3">
                <b> @Html.DisplayName("Billing Address")</b>
            </div>
            <div class="col-md-9">
                <h6>Same as property address.</h6>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.ProfileInfo.BillingAddress)
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.ProfileInfo.BillingAddress)
                @Html.DisplayFor(model => model.ProfileInfo.BillingAddress)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.ProfileInfo.BillingAddress_2)
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.ProfileInfo.BillingAddress_2)
                @Html.DisplayFor(model => model.ProfileInfo.BillingAddress_2)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.ProfileInfo.BillingCty)
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.ProfileInfo.BillingCty)
                @Html.DisplayFor(model => model.ProfileInfo.BillingCty)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.ProfileInfo.BillingState)
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.ProfileInfo.BillingState)
                @Html.DisplayFor(model => model.ProfileInfo.BillingState)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.ProfileInfo.BillingZip)
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.ProfileInfo.BillingZip)
                @Html.DisplayFor(model => model.ProfileInfo.BillingZip)
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.HomePhone)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.ProfileInfo.HomePhone)
            @Html.DisplayFor(model => model.ProfileInfo.HomePhone)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.WorkPhone)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.ProfileInfo.WorkPhone)
            @Html.DisplayFor(model => model.ProfileInfo.WorkPhone)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.ProfileInfo.MobilePhone)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.ProfileInfo.MobilePhone)
            @Html.DisplayFor(model => model.ProfileInfo.MobilePhone)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.RentAmount)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.RentAmount)
            @Html.DisplayFor(model => model.RentAmount)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.FinalDueDate)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.FinalDueDate)
            @Html.DisplayFor(model => model.FinalDueDate)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Deposit)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.Deposit)
            @Html.DisplayFor(model => model.Deposit)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.DepostDueDate)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.DepostDueDate)
            @Html.DisplayFor(model => model.DepostDueDate)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.PetDepositDue)
            </b>
        </div>
        <div class="col-md-9">
            @Html.HiddenFor(model => model.PetDepositDue)
            @if (Model.PetDepositDue.ToString() == "True")
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </div>
    </div>
    if (Model.PetDepositDue.ToString() == "True")
    {
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayNameFor(model => model.PetDeposit)
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.PetDeposit)
                @Html.DisplayFor(model => model.PetDeposit)
            </div>
        </div>
    }
    if (@Model.LeaseDocName != null)
    {
        <div class="row">
            <div class="col-md-3">
                <b>
                    @Html.DisplayName("Lease Documents")
                </b>
            </div>
            <div class="col-md-9">
                @Html.HiddenFor(model => model.LeaseDocName)
                @Html.DisplayFor(model => model.LeaseDocName)
            </div>
        </div>
    }
    <div class="clearfix">&nbsp;</div>
    <div class="row">
        <div class="col-md-6">
                <div class="form-actions no-color">
                    <input id="btnSave" name="Command" type="submit" value="Save Tenant" class="btn-button btn-primary" />
                    <input id="btnEdit" name="Command" type="submit" value="Edit" class="btn-button btn-primary" />
                    @Html.ActionLink("Cancel", "EditAdmin", "Tenant", new {id = Model.UserID }, new { @class = "" })
                    <h2></h2>
                </div>
        </div>
    </div>
}
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

