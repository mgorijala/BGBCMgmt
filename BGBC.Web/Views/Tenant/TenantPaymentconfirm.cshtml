@model BGBC.Web.Models.Payments

@{
    ViewBag.Title = "TenantPaymentconfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="back">
    <div class="col-md-12 no-padd">

        <div class="col-md-6  no-padd">
            <h1>Confirm Payment</h1>
        </div>
        <div class="col-md-6  no-padd header-btn">
            @Html.ActionLink("Back", "TenantPayment", "Tenant", null, new { @class = "btn-button btn-primary pull-right" })
        </div>

    </div>
    <div class="clearfix">&nbsp;</div>
    <h5>Billing info</h5>
    <br />
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.FirstName)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.FirstName)
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.LastName)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.Phone)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.Phone)
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    <br />
    <h5>Billing Address</h5>
    <br />

    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.UsePropertyAddress)
        </div>
        <div class="col-sm-9">
            @if (Model.UsePropertyAddress.ToString() == "True")
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.BillingAddress)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.BillingAddress)
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.BillingAddress_2)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.BillingAddress_2)
        </div>
    </div>

    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.BillingCty)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.BillingCty)
        </div>
    </div>

    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.BillingState)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.BillingState)
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.BillingZip)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.BillingZip)
        </div>
    </div>
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.SaveCard)
        </div>
        <div class="col-sm-9">
            @if (Model.SaveCard.ToString() == "True")
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </div>
    </div>
    <br />
    <h5>Payment Info</h5>
    <br />
    <div class="row checkoutconform">
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.PaymentMethod)
        </div>
    </div>
    @if (Model.PaymentMethod == "eCheck")
    {
        <div class="row checkoutconform">
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.BankAccountType)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.BankAccountType)
            </div>
        </div>
        <div class="row checkoutconform">
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.BankRoutingNumber)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.BankRoutingNumber)
            </div>
        </div>
        <div class="row checkoutconform">
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.BankAccountNumber)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.BankAccountNumber)
            </div>
        </div>
         <div class="row checkoutconform">
            <div class="col-sm-3">
                <span>Save Account</span>
            </div>
            <div class="col-sm-9">
                @if (Model.SaveCard.ToString() == "True")
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row checkoutconform">
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.CardNo)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.CardNoMask)
            </div>
        </div>

        <div class="row checkoutconform">
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.CardDate)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.CardDate)
            </div>
        </div>

        <div class="row checkoutconform">
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.SaveCard)
            </div>
            <div class="col-sm-9">
                @if (Model.SaveCard.ToString() == "True")
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </div>
        </div>
    }


    <br />
    <h5>Selected Charges</h5>
    <br />
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Due Date
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Amount
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.TenantRent.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(p => Model.TenantRent[i].DueDateDisplay)
                            </td>
                            <td>
                                @Html.DisplayFor(p => Model.TenantRent[i].Charge)
                            </td>
                            <td>
                                @Html.DisplayFor(p => Model.TenantRent[i].AmountDue)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <div class="row">
        <div class="col-md-offset-6 col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.OrderTotal, htmlAttributes: new { @class = "control-label" })
            </div>
        </div>
        <div class="col-md-offset-1 col-md-">@Html.DisplayFor(model => model.OrderTotal)</div>
    </div>
    <div class="form-group">
        <h4>Comments</h4>
        @Html.DisplayFor(model => model.Comments)
    </div>

    @using (Html.BeginForm("Transaction", "Tenant"))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Submit Payment" class="btn-button btn-primary" />
            @Html.ActionLink("Edit", "TenantPayment", "Tenant", null, new { @class = "btn-button btn-primary" })
        </div>
    }
</div>
