
@model IEnumerable<BGBC.Model.vRentPayment>
@{
    ViewBag.Title = "ViewTenantsPayments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="back">
    <div class="col-md-12 no-padd">
        <div class="col-md-11 col-sm-6 no-padd">
            <h1>Tenant Payment  History</h1>
        </div>

        <div class="col-md-1 col-sm-6 no-padd header-btn">
            @Html.ActionLink("Back", "", "",null, new { @class = "btn-button btn-primary", @href = Request.UrlReferrer })         
        </div>

    </div>
    <div class="clearfix">&nbsp;</div>
    <h4>@ViewBag.Name</h4>
    <h5>
        @ViewBag.Address
    </h5>
    <h5>@ViewBag.State</h5>
    <h5>@ViewBag.City</h5>
    <h5>@ViewBag.Zip</h5>

    @*<h2>Jack Tripper</h2>
    <h5>123 Testing St.</h5>
    <h5>Unit 101</h5>
    <h5>Testingville, TN 37201</h5>*@
  
    <div class="clearfix">&nbsp;</div>
            <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Date / Time
                        </th>
                        <th>
                            Confirmation#
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Payment Amount
                        </th>
                        <th>
                            Comment
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prop in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(p => prop.TransDate)
                            </td>
                            <td>
                                @Html.DisplayFor(p => prop.TransID)
                            </td>
                            <td>
                                @Html.DisplayFor(p => prop.Description) 
                            </td>
                            
                            <td>@Html.DisplayFor(p => prop.Amount)</td>
                            <td>@Html.DisplayFor(p => prop.Comments)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
</div>
